<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.FakeCoSecurity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.FakeCo.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.FakeCo.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.FakeCo.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.FakeCo.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.FakeCo.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.FakeCo.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.FakeCo.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.FakeCo.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.FakeCo.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.FakeCo.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.FakeCo.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.FakeCo.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.FakeCo.Overline</item>
    </style>
    
    <!-- Typography styles -->
    <style name="TextAppearance.FakeCo.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">96sp</item>
    </style>
    
    <style name="TextAppearance.FakeCo.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">60sp</item>
    </style>
    
    <style name="TextAppearance.FakeCo.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">48sp</item>
    </style>
    
    <style name="TextAppearance.FakeCo.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">34sp</item>
    </style>
    
    <style name="TextAppearance.FakeCo.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="TextAppearance.FakeCo.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="TextAppearance.FakeCo.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.FakeCo.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.FakeCo.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.FakeCo.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.FakeCo.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="TextAppearance.FakeCo.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="TextAppearance.FakeCo.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>